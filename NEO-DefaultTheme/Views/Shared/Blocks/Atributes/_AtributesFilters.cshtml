@model IList<DomainProduct.Entities.Attribute>

@if (Model != null)
{
    <div class="active title">Atributos<i class="dropdown icon"></i></div>
    <div class="active content">
        <div class="ui form">
            <div class="grouped fields">
                @foreach (var atribute in Model)
                {
                    foreach (var valor in atribute.attributeValues)
                    {
                        if (valor.active)
                        {
                            <div class="field">
                                <div class="ui checkbox checkAtribute" id="@valor.idAttributeValue" name="@valor.Value">
                                    <input type="checkbox" name="@valor.Value" id="checkAtribute_@valor.idAttributeValue" value="@valor.idAttributeValue">
                                    <label>@valor.Value</label>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
}